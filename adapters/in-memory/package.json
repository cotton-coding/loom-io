    },
    "./internal": {
      "types": "./dist/exports/internal.d.ts",
      "import": "./dist/exports/internal.js"
    }
  },
  "maintainers": [
    {
      "name": "Wolfgang Rathgeb",
      "email": "ghost+npm@dropanote.de"
    }
